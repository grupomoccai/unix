Introducción a UNIX: Trabajo Práctico 5

Ejercicio 1

#!/bin/bash
var1=`od /dev/urandom| tr -dc '1-9' | fold -w 2| head -1`
echo Ingresa el numero escondido entre 1 y 100:
read var2 
while [ $var1 -ne $var2 ]
do
   if [ $var2 -lt $var1 ]
   then
       echo Upps!  $var2 es un numero menor al numero escondido, prueba con un numero mayor:
       read var2
   else
       echo Upps! $var2 es un numero mayor al numero escondido, prueba con un numero menor:
       read var2
   fi
done
echo ¡Fantástico, $var2 es el numero escondido!

Ejercicio 2

#!/bin/bash

echo "Ingrese un nombre para obtener el número de proceso:"
read nombre_proceso
pidof $nombre_proceso


Ejercicio 8

#!/bin/bash
for ((A=1;A<10000;A++))
do
 	var1=`echo "mod_rotu_"$A".vtk"` 
  	var2=${var1/vtk/itk}  # cambia de mod_rotu_X.vtk mod_rotu_X.itk
  	B=`printf "%04d" $A`
  	var3=${var2/$A/$B} # # cambia de mod_rotu_X.itk mod_rotu_YYYY.itk
  	mv $var1 $var3  # renombra de mod_rotu_X.vtk mod_rotu_YYYY.itk
done



Ejercicio 9

#!/bin/bash
for ((i=1; i<100; i++))
do 
   	 j=`printf "%04d" $i`
	mkdir C$j
	wget http://ecm2.mathcs.emory.edu/aneuriskdata/preview/C$j/centerlines.vtk  
	wget http://ecm2.mathcs.emory.edu/aneuriskdata/preview/C$j/model.vtk  
	wget http://ecm2.mathcs.emory.edu/aneuriskdata/download/C$j/image.png 

	mv centerlines.vtk ./C$j/"C$j"_clines.vtk
	mv model.vtk ./C$j/"C$j"_geomodel.vtk
	mv image.png ./C$j/"C$j"_picture.png

done

